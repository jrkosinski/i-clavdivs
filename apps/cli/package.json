{
    "name": "@i-clavdivs/cli",
    "version": "0.0.0",
    "type": "module",
    "description": "CLI entrypoint for running the agent from the command line",
    "bin": {
        "i-clavdivs": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsc -p tsconfig.json --watch",
        "clean": "rm -rf dist *.tsbuildinfo",
        "typecheck": "tsc --noEmit",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@i-clavdivs/agents": "workspace:*",
        "@i-clavdivs/runner": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "vitest": "4.0.18"
    }
}
