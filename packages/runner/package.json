{
    "name": "@i-clavdivs/runner",
    "version": "0.0.0",
    "type": "module",
    "description": "Agent runner: session management and LLM execution loop",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsc -p tsconfig.json --watch",
        "clean": "rm -rf dist *.tsbuildinfo",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "files": [
        "dist",
        "src"
    ],
    "dependencies": {
        "@i-clavdivs/agents": "workspace:*",
        "@i-clavdivs/models": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "vitest": "4.0.18"
    }
}
